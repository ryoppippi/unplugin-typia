{
  "name": "bunbuild",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch ./index.ts",
    "test": "nr test:build-run && npm run test:jit",
    "test:jit": "bun run ./index.ts",
    "test:build-run": "nr build && node ./out/index.js",
    "build": "bun run ./build.ts",
    "prepare": "ts-patch install && typia patch"
  },
  "devDependencies": {
    "@antfu/ni": "^0.23.0",
    "@types/bun": "latest",
    "std-env": "^3.7.0",
    "typia": "^6.9.0"
  },
  "peerDependencies": {
    "ts-patch": "^3.2.1",
    "tslib": "^2.4.1",
    "typescript": "~5.5.2",
    "@ryoppippi/unplugin-typia": "workspace:*"
  }
}
