{
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true
  },
  "platformAutomerge": true,
  "dependencyDashboard": false,
  "automerge": true,
  "branchConcurrentLimit": 0,
  "labels": ["dependencies", "renovate"],
