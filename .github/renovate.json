  "packageRules": [
    {
      "matchPackageNames": ["typia", "ts-patch"],
      "labels": ["peerDependencies", "typia", "renovate"],
      "stabilityDays": 0,
      "schedule": ["before 4am"],
      "lockFileMaintenance": {
        "enabled": true
      }
    }
  ]
}
