{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["esnext", "esnext.asynciterable", "DOM"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"isolatedDeclarations": true
	},
	"exclude": ["dist", "eslint.config.js", "tests/fixtures"]
}
